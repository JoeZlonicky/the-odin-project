<div class="message-preview">
  <div class="message-preview__title"><%= message.title %></div>
  <% if (message.body) { %>
  <div class="message-preview__body"><%= message.body %></div>
  <% } %>

  <div class="message-preview__footer">
    <% if (isIdUserId(message.user_id)) { %> [You] <% } else if (isMember) { %>
    <a href="/users/<%= message.user_id %>"><%=message.username%></a>
    <% } else { %>
    Anonymous Author
    <% } %>

    <% if (isIdUserId(message.user_id) || isMember) { %>
    -
    <%= datetimeFormat(message.timestamp) %>
    <% } %>
    - <a href="/messages/<%=message.id%>">Open</a>
  </div>
</div>
