<% if (locals.users && locals.users.length > 0) {%>
  <div style="display: flex; flex-direction: column; gap: 8px;">
  <% users.forEach(user => { %>
    <div style="border: 2px solid black; padding: 8px;">
      <div><b>ID:</b> <%= user.id %></div>
      <div><b>Name:</b> <%= user.firstName %> <%= user.lastName %></div>
      <div><b>Email:</b> <%= user.email %></div>
      <div><b>Age:</b> <%= user.age || 'N/A' %></div>
      <div style="margin-bottom: 4px;"><b>Bio:</b> <%= user.bio || 'N/A' %></div>

      <a href="/<%= user.id %>/update" style="margin-right: 4px;">Update</a>
      <form action="/<%= user.id %>/delete" method="POST" style="display:inline;">
        <button type="submit" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
      </form>
    </div>
  <% }); %>
  </div>
<% } else if (locals.noUsersMessage) { %>
  <div><%= locals.noUsersMessage %> </div>
<% } %>